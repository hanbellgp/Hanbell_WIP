<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/wipanalysisitem_tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="330dip"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="扫描条码"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wipanalysisitem_tvInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:inputType="text"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="品名"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wipanalysisitem_tvMaterialName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:inputType="text"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/wipanalysisitem_h10"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:text="必填"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wipanalysisitem_h11"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:text="必判"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wipanalysisitem_h1"
                        android:layout_width="180dip"
                        android:layout_height="30dip"
                        android:text="检验项目"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wipanalysisitem_h2"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:text="值"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wipanalysisitem_h3"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:text="预设值"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:visibility="invisible" />
                </TableRow>

                <HorizontalScrollView
                    android:layout_width="330dip"
                    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/wipanalysisitem_lv0"
                        android:layout_width="330dip"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:textSize="15sp" />
                </HorizontalScrollView>
            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/wipanalysisitem_tab2_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="35dp"
                        android:text="值"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wipanalysisitem_editTab2_0"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:inputType="numberDecimal"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/wipanalysisitem_btnTab2_0_OK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wipanalysisitem_tab2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="35dp"
                        android:text="值"
                        android:textSize="15sp" />

                    <RadioGroup
                        android:id="@+id/wipanalysisitem_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/wipanalysisitem_radioButtonOK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OK"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/wipanalysisitem_radioButtonNG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NG"
                            android:textSize="15sp" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/wipanalysisitem_btnTab2_1_OK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/wipanalysisitem_btnConfirm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="储存" />

        <Button
            android:id="@+id/wipanalysisitem_btnExit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="离开" />
    </LinearLayout>

</TableLayout>