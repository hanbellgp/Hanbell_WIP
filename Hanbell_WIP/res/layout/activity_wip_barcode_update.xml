<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="扫描条码"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wipbarcode_tvInput"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:inputType="text"
                android:textSize="17sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="生产日期"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wipbarcode_tvPlanTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:enabled="false"
                android:inputType="text"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/wipbarcode_ckboxsd"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="双段"
                android:textColor="@color/red"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/wipbarcode_ckboxdl"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="动力"
                android:textColor="@color/red"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/wipbarcode_ckboxfl"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="库存直接发料"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="制造号码"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wipbarcode_tvProductCompid"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:enabled="false"
                android:inputType="text"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/wipbarcode_tvone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="机壳编码"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wipbarcode_tvSerialnumber"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:enabled="false"
                android:inputType="text"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/wipbarcode_tvtwo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="二段机体"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wipbarcode_tvSerialnumbertwo"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:enabled="false"
                android:inputType="text"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/wipbarcode_h0"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wipbarcode_h1"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:text="制造号码"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wipbarcode_h2"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:text="机壳编码"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal" >

            <ListView
                android:id="@+id/wipbarcode_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp" />
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/wipbarcode_btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="确认" />

            <Button
                android:id="@+id/wipbarcode_btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="删除" />

            <Button
                android:id="@+id/wipbarcode_btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="清除" />

            <Button
                android:id="@+id/wipbarcode_btnExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="离开" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>