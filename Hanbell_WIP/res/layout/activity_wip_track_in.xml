<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/wiptrackin_btnTab1"
            android:layout_width="80dp"
            android:layout_height="40dip"
            android:text="报工" />

        <Button
            android:id="@+id/wiptrackin_btnTab2"
            android:layout_width="100dp"
            android:layout_height="40dip"
            android:text="自主检" />

        <Button
            android:id="@+id/wiptrackin_btnTab3"
            android:layout_width="120dp"
            android:layout_height="40dip"
            android:text="装配规范" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/wiptrackin_tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="扫描条码"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:inputType="text"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="制造号码"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvProductCompid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="成品品号"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvMaterialid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="机型"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvProductModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/wiptrackin_tvCM"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="订单厂家"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvCustomerName"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/wiptrackin_tvM"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="主齿轮"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvMCheel"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/wiptrackin_tvD"
                        android:layout_width="30dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="副"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvDCheel"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/wiptrackin_tvMDCheel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/wiptrackin_tvPM"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="生管备注"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_tvPMMessage"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:gravity="left|top"
                        android:inputType="text"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/wiptrackin_h8"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:textColor="#000000"
                        android:textSize="15sp" />
					
                    <TextView
                        android:id="@+id/wiptrackin_h12"
                        android:layout_width="15dip"
                        android:layout_height="30dip"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    
                    <TextView
                        android:id="@+id/wiptrackin_h6"
                        android:layout_width="120dip"
                        android:layout_height="30dip"
                        android:text="零部件编号"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h7"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:text="零部件品名"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h10"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:text="料号"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal" >

                    <ListView
                        android:id="@+id/wiptrackin_lv0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp" />
                </HorizontalScrollView>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wiptrackin_tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TableLayout
                android:layout_width="330dip"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TableRow>

                    <TextView
                        android:id="@+id/wiptrackin_h9"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:text="必填"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h11"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:text="必判"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h1"
                        android:layout_width="180dip"
                        android:layout_height="30dip"
                        android:text="检验项目"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h2"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:text="值"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h3"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:text="预设值"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:visibility="invisible" />
                </TableRow>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal" >

                    <ListView
                        android:id="@+id/wiptrackin_lv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />
                </HorizontalScrollView>
            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/wiptrackin_tab2_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="35dp"
                        android:text="值"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/wiptrackin_editTab2_0"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:inputType="numberDecimal"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/wiptrackin_btnTab2_0_OK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wiptrackin_tab2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="35dp"
                        android:text="值"
                        android:textSize="15sp" />

                    <RadioGroup
                        android:id="@+id/wiptrackin_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/wiptrackin_radioButtonOK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OK"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/wiptrackin_radioButtonNG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NG"
                            android:textSize="15sp" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/wiptrackin_btnTab2_1_OK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wiptrackin_tab3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="invisible" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TableRow>

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="大类"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/wiptrackin_spBid"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/wiptrackin_h4"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:text="中类"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wiptrackin_h5"
                        android:layout_width="200dip"
                        android:layout_height="30dip"
                        android:text="小类"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </TableRow>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal" >

                    <ListView
                        android:id="@+id/wiptrackin_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp" />
                </HorizontalScrollView>
            </TableLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/wiptrackin_btnTemporary"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="暂存" />

        <Button
            android:id="@+id/wiptrackin_btnConfirm"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="报工" />

        <Button
            android:id="@+id/wiptrackin_btnTab0_Delete"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="删除" />

        <Button
            android:id="@+id/wiptrackin_btnAdd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="手动" />
        
        <Button
            android:id="@+id/wiptrackin_btnSP"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="特采" />
    </LinearLayout>

</TableLayout>